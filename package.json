{
  "name": "corpopong",
  "version": "1.0.0",
  "description": "Corporate grade ping-pong leaderboard!",
  "devDependencies": {
    "bower": "^1.8.0",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "polymer-cli": "^1.5.1",
    "autoprefixer": "^7.1.6",
    "postcss-cli": "^4.1.1",
    "postcss-html": "^0.11.0"
  },
  "scripts": {
    "install": "bower install --allow-root",
    "lint": "eslint . --ext js,html --ignore-path .gitignore && polymer lint",
    "build": "polymer build",
    "start": "polymer serve",
    "autoprefixer": "postcss ./src/**/*.html --replace --use autoprefixer -s postcss-html --no-map"
  }
}
